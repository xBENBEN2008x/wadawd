	miscFrame.Active = false -- wichtig: blockiert keine Buttons
	Instance.new("UICorner", miscFrame).CornerRadius = UDim.new(0,12)

	local accountLabel = Instance.new("TextLabel")
	accountLabel.Parent = miscFrame
	accountLabel.Position = UDim2.new(0,10,0,10)
	accountLabel.Size = UDim2.new(0,200,0,30)
